        <!-- For Configurable/Bundle/Group Products -->
        <referenceContainer name="product.info.options.wrapper">
            <block class="Ef\RedHot\Block\Product\View\RedHotCounter" name="redhot.counter.configurable" template="Ef_RedHot::product/view/redhotcounter.phtml" after="-"/>
